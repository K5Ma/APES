#include "Master_Functions.h"

//Standard includes
#include <stdio.h>
#include <string.h>

//TivaWare includes
#include "utils/uartstdio.h"

//FreeRTOS includes
#include "FreeRTOS.h"
#include "task.h"

//My includes
#include "Global_Defines.h"


void Log_UART(uint8_t Src, char* LogLvl, char* Msg)
{
	/* Get name of source */
	char* Source_text;
	switch(Src)
	{
		case Main:
			Source_text = "Main";
			break;

		case Logger:
			Source_text = "Logger";
			break;

		case Temp:
			Source_text = "Temp";
			break;

		case LED:
			Source_text = "LED";
			break;

		default:
			Source_text = "Unknown";
			break;
	}

	char Time_mS[50];

	sprintf( Time_mS, "%ld", (( xTaskGetTickCount() )/1000) );

	/* Output error to UART */
	UARTprintf("[%s] %s Task (%s) => %s\n\n", Time_mS, Source_text, LogLvl, Msg);
}
